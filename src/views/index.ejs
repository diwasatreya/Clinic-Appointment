<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FindaCare - Find & Book Appointments</title>
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        xintegrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="./js/tailwind.js"></script>
    <link rel="stylesheet" href="./css/style.css">
</head>

<body class="bg-gray-50 font-sans min-h-screen-flex">

    <%- include('./particles/header') %>


        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 flex-grow">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-extrabold text-gray-800 mb-3">Your Health, Simplified.</h2>
                <p class="text-xl text-gray-500">Find top-rated clinics and book your appointment instantly.</p>
            </div>

            <div class="max-w-4xl mx-auto mb-16">
                <form action="/" method="get"
                    class="flex items-center shadow-lg rounded-full overflow-hidden bg-white border border-gray-200 
				focus-within:ring-2 focus-within:ring-accent-green focus-within:border-accent-green transition duration-300 hover:shadow-xl">

                    <!-- Search Input -->
                    <input type="text" name="search" placeholder="Search by Clinic Name, Speciality, or Location..."
                        class="w-full px-6 text-lg text-gray-700 border-none outline-none flex-grow placeholder-gray-400 transition duration-200 focus:ring-0">

                    <!-- Search Button -->
                    <button type="submit"
                        class="bg-accent-green text-white px-6 md:px-8 py-3 hover:bg-green-600 transition duration-200 transform hover:scale-105 flex items-center justify-center font-semibold text-lg">
                        Search
                    </button>
                </form>
            </div>

            <h3 class="text-2xl font-bold text-gray-700 mb-6">Available Clinics Near You</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 clinic-list">

                <% if(typeof clinics !=='undefined' && clinics.length> 0) { %>
                    <% clinics.forEach((clinic)=> { %>
                        <div
                            class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition duration-300 border border-gray-100 flex flex-col justify-between h-full">

                            <!-- Top Section: Name and Icon -->
                            <div class="flex items-center mb-4">
                                <div
                                    class="w-10 h-10 bg-accent-green/10 rounded-full flex items-center justify-center text-accent-green text-lg mr-3 flex-shrink-0">
                                    <i class="fa-solid fa-hospital"></i>
                                </div>
                                <h3 class="text-xl font-bold text-gray-800 flex-grow">
                                    <%= clinic.clinicName %>
                                </h3>
                            </div>

                            <!-- Middle Section: Description + Location + Badge -->
                            <div class="flex flex-col flex-grow justify-between mb-4">
                                <!-- Description -->
                                <p class="text-gray-700 text-sm mb-3">
                                    <%= clinic.description || 'No description available.' %>
                                </p>

                                <!-- Location -->
                                <div class="flex items-center text-gray-600 text-sm mb-2">
                                    <i class="fa-solid fa-map-marker-alt text-blue-500 w-5 flex-shrink-0"></i>
                                    <span><strong>Location:</strong>
                                        <%= clinic.address || 'Downtown Area' %>
                                    </span>
                                </div>

                                <!-- Accepting Patients Badge -->
                                <div class="flex items-center text-sm">
                                    <span
                                        class="<%- (clinic.status == true && (clinic.doctors.length != 0)) ? 'text-accent-green' : 'text-red-500' %> font-semibold flex items-center">
                                        <i
                                            class="fa-solid <%- (clinic.status == true && (clinic.doctors.length != 0)) ? 'fa-circle-check' : 'fa-circle-xmark' %> mr-1"></i>
                                        <%- (clinic.status==true && (clinic.doctors.length !=0))
                                            ? 'Accepting New Patients' : 'Closed for New Patients' %>
                                    </span>
                                </div>
                            </div>

                            <!-- Bottom Section: Button -->
                            <form action="/appoint" method="get">
                                <input type="text" name="id" value="<%= clinic._id.toString() %>" hidden>
                                <button type="submit" <%- (clinic.status==true && (clinic.doctors.length !=0)) ? ''
                                    : 'disabled' %>
                                    class="block w-full <%- (clinic.status==true && (clinic.doctors.length !=0))
                                        ? 'bg-accent-green hover:bg-green-600' : 'bg-gray-400 cursor-not-allowed' %>
                                        text-center text-white
                                        py-3 rounded-lg font-semibold transition duration-150 shadow-md
                                        btn-hover-scale">
                                        <i class="fa-solid fa-calendar-check mr-1"></i>
                                        Book Appointment
                                </button>


                            </form>

                        </div>
                        <% }) %>
                            <% } else { %>
                                <div
                                    class="md:col-span-2 lg:col-span-3 xl:col-span-4 p-8 text-center text-gray-500 border-2 border-dashed border-gray-300 rounded-lg">
                                    <i class="fa-solid fa-circle-info text-2xl mb-2"></i>
                                    <p class="text-lg font-medium">We couldnâ€™t find any clinics matching your search.
                                        Try using different keywords or location.</p>
                                </div>
                                <% } %>

            </div>


        </main>

        <%- include('./particles/footer') %>

            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const mobileMenu = document.getElementById('mobile-menu');
                    const openButton = document.getElementById('mobile-menu-toggle-button');
                    const closeButton = document.getElementById('mobile-menu-close-button');

                    // Function to open the menu
                    const openMenu = () => {
                        mobileMenu.classList.remove('-translate-x-full');
                    };

                    // Function to close the menu
                    const closeMenu = () => {
                        mobileMenu.classList.add('-translate-x-full');
                    };

                    // Event listeners
                    if (openButton) {
                        openButton.addEventListener('click', openMenu);
                    }

                    if (closeButton) {
                        closeButton.addEventListener('click', closeMenu);
                    }

                    // Close menu when a navigation link is clicked (optional, but good UX)
                    mobileMenu.querySelectorAll('a').forEach(link => {
                        link.addEventListener('click', closeMenu);
                    });
                });
            </script>

</body>

</html>