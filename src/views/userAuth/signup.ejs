<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Appointment Portal</title>
    <!-- Tailwind CSS CDN and Professional Configuration -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary-blue': '#1D4ED8', // Primary: Blue-700 (Trust)
                        'primary-hover': '#1E40AF', // Blue-800
                        'accent-green': '#059669', // Accent: Emerald-600 (Success/Complete)
                        'text-dark': '#1F2937', // Gray-800
                        'background-light': '#F9FAFB', // Gray-50
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <style>
        /* Ensures the content is vertically centered */
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        main {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
    </style>
</head>

<body class="bg-background-light font-sans text-text-dark">

    <main>
        <div class="w-full max-w-lg bg-white p-8 sm:p-10 rounded-xl shadow-2xl border-t-8 border-accent-green">
            <div class="text-center mb-8">
                <a href="landing_page.html" class="text-3xl font-extrabold text-accent-green tracking-tight">
                    SERVICE BOOKER
                </a>
                <h2 class="mt-4 text-2xl font-bold text-text-dark">
                    Create Your Account
                </h2>
                <p class="mt-2 text-sm text-gray-600">
                    Already a member?
                    <a href="login_page.html" class="font-medium text-primary-blue hover:text-primary-hover">
                        Log in here
                    </a>
                </p>
            </div>

            <form class="space-y-6" action="/auth/signup" method="post">
                <!-- Name Fields -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label for="first-name" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                        <input id="first-name" name="first-name" type="text" autocomplete="given-name" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                    </div>
                    <div>
                        <label for="last-name" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                        <input id="last-name" name="last-name" type="text" autocomplete="family-name" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                    </div>
                </div>

                <!-- Email & Role -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                    <input id="email" name="email" type="email" autocomplete="email" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                </div>

                <div>
                    <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Account Type</label>
                    <select id="role" name="role" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                        <option value="client">Client (To Book Services)</option>
                        <option value="provider">Provider (To Offer Services)</option>
                    </select>
                </div>

                <!-- Password Fields -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <input id="password" name="password" type="password" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                    </div>
                    <div>
                        <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm
                            Password</label>
                        <input id="confirm-password" name="confirm-password" type="password" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition duration-150">
                    </div>
                </div>

                <!-- Terms & Conditions Checkbox -->
                <div class="flex items-start">
                    <input id="terms-consent" name="terms-consent" type="checkbox" required
                        class="h-4 w-4 text-accent-green border-gray-300 rounded focus:ring-accent-green mt-1">
                    <label for="terms-consent" class="ml-3 text-sm text-gray-700">
                        I agree to the <a href="#" class="font-medium text-primary-blue hover:underline">Terms of
                            Service</a> and Privacy Policy.
                    </label>
                </div>

                <div>
                    <button type="submit"
                        class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-base font-semibold text-white bg-accent-green hover:bg-green-700 focus:outline-none focus:ring-4 focus:ring-accent-green/50 transition duration-200">
                        Create Account
                    </button>
                </div>
            </form>
        </div>
    </main>

    <!-- Simple Footer -->
    <footer class="text-center text-xs text-gray-500 py-4 w-full">
        Â© 2025 Professional Appointment System.
    </footer>
</body>

</html>