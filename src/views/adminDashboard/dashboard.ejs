<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="../../css/style.css">
    <style>
        .accent-green { color: #10b981; }
        .bg-accent-green { background-color: #10b981; }
        .hover\:bg-accent-green:hover { background-color: #059669; }
        .border-accent-green { border-color: #10b981; }
        .text-accent-green { color: #10b981; }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg border-r border-gray-200 flex flex-col">
            <!-- Logo -->
            <div class="p-6 border-b border-gray-200">
                <h1 class="text-2xl font-bold text-accent-green">
                    <i class="fa-solid fa-shield-halved mr-2"></i>Admin Panel
                </h1>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 p-4 space-y-2">
                <a href="/admin/dashboard?tab=pending" 
                   class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-accent-green hover:text-white transition <%- tab === 'pending' ? 'bg-accent-green text-white' : '' %>">
                    <i class="fa-solid fa-clock mr-3"></i>
                    Pending Approvals
                </a>
                <a href="/admin/dashboard?tab=manage" 
                   class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-accent-green hover:text-white transition <%- tab === 'manage' ? 'bg-accent-green text-white' : '' %>">
                    <i class="fa-solid fa-building mr-3"></i>
                    Manage Clinics
                </a>
            </nav>

            <!-- Logout -->
            <div class="p-4 border-t border-gray-200">
                <a href="/auth/logout" 
                   class="flex items-center px-4 py-3 text-red-600 rounded-lg hover:bg-red-50 transition">
                    <i class="fa-solid fa-sign-out-alt mr-3"></i>
                    Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-y-auto">
            <div class="p-8">
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-gray-800">
                        <% if (tab === 'pending') { %>
                            Pending Clinic Approvals
                        <% } else { %>
                            Manage Clinics
                        <% } %>
                    </h2>
                    <p class="text-gray-600 mt-2">
                        <% if (tab === 'pending') { %>
                            Review and approve or decline clinic registrations
                        <% } else { %>
                            Search, ban, and manage clinic approvals
                        <% } %>
                    </p>
                </div>

                <!-- Pending Approvals Tab -->
                <% if (tab === 'pending') { %>
                    <% if (clinicDetails && clinicDetails.length > 0) { %>
                        <div class="space-y-6">
                            <% clinicDetails.forEach((item) => { %>
                                <% const clinic = item.clinic; %>
                                <% const doctors = item.doctors; %>
                                <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                                    <div class="flex justify-between items-start mb-4">
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800"><%= clinic.clinicName %></h3>
                                            <p class="text-sm text-gray-500 mt-1">Submitted: <%= new Date(clinic.createdAt).toLocaleDateString() %></p>
                                        </div>
                                        <div class="flex gap-3">
                                            <form method="post" action="/admin/clinic/approve" class="inline">
                                                <input type="hidden" name="clinicId" value="<%= clinic._id %>">
                                                <button type="submit" 
                                                    class="bg-accent-green hover:bg-green-700 text-white px-6 py-2 rounded-lg font-medium transition shadow-md">
                                                    <i class="fa-solid fa-check mr-2"></i>Approve
                                                </button>
                                            </form>
                                            <form method="post" action="/admin/clinic/decline" class="inline">
                                                <input type="hidden" name="clinicId" value="<%= clinic._id %>">
                                                <button type="submit" 
                                                    class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-medium transition shadow-md"
                                                    onclick="return confirm('Are you sure you want to decline this clinic? This action cannot be undone.')">
                                                    <i class="fa-solid fa-times mr-2"></i>Decline
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                                        <!-- Clinic Information -->
                                        <div>
                                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                                <i class="fa-solid fa-building mr-2 text-accent-green"></i>Clinic Information
                                            </h4>
                                            <div class="space-y-3">
                                                <div>
                                                    <p class="text-sm font-medium text-gray-600">Description</p>
                                                    <p class="text-gray-800 mt-1"><%= clinic.description || 'No description provided' %></p>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-600">Address</p>
                                                    <p class="text-gray-800 mt-1"><%= clinic.address %></p>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-600">Phone</p>
                                                    <p class="text-gray-800 mt-1"><%= clinic.phone %></p>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-600">Email</p>
                                                    <p class="text-gray-800 mt-1"><%= clinic.email %></p>
                                                </div>
                                                <% if (clinic.opening) { %>
                                                    <div>
                                                        <p class="text-sm font-medium text-gray-600">Opening Hours</p>
                                                        <p class="text-gray-800 mt-1"><%= clinic.opening %></p>
                                                    </div>
                                                <% } %>
                                                <% if (clinic.speciality && clinic.speciality.length > 0) { %>
                                                    <div>
                                                        <p class="text-sm font-medium text-gray-600">Speciality</p>
                                                        <p class="text-gray-800 mt-1"><%= clinic.speciality.join(', ') %></p>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>

                                        <!-- Doctors and Time Slots -->
                                        <div>
                                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                                <i class="fa-solid fa-user-doctor mr-2 text-accent-green"></i>Doctors & Time Slots
                                            </h4>
                                            <% if (doctors && doctors.length > 0) { %>
                                                <div class="space-y-4">
                                                    <% doctors.forEach((doctor) => { %>
                                                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                                            <p class="font-semibold text-gray-800">Dr. <%= doctor.name %></p>
                                                            <p class="text-sm text-gray-600 mt-1">Speciality: <%= doctor.speciality %></p>
                                                            <% if (doctor.description) { %>
                                                                <p class="text-xs text-gray-500 mt-2"><%= doctor.description %></p>
                                                            <% } %>
                                                            <% if (doctor.time && doctor.time.length > 0) { %>
                                                                <div class="mt-3">
                                                                    <p class="text-xs font-medium text-gray-600 mb-2">Available Time Slots:</p>
                                                                    <div class="flex flex-wrap gap-2">
                                                                        <% doctor.time.forEach((slot) => { %>
                                                                            <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-accent-green/10 text-accent-green border border-accent-green/20">
                                                                                <%= typeof slot === 'string' ? slot : slot.time %>
                                                                                <% if (typeof slot === 'object' && slot.limit) { %>
                                                                                    <span class="ml-1 text-gray-500">(Limit: <%= slot.limit %>)</span>
                                                                                <% } %>
                                                                            </span>
                                                                        <% }) %>
                                                                    </div>
                                                                </div>
                                                            <% } else { %>
                                                                <p class="text-xs text-gray-500 mt-2">No time slots added</p>
                                                            <% } %>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            <% } else { %>
                                                <p class="text-gray-500 text-sm">No doctors added yet</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-12 text-center">
                            <i class="fa-solid fa-check-circle text-6xl text-gray-300 mb-4"></i>
                            <p class="text-xl text-gray-600">No pending clinic approvals</p>
                        </div>
                    <% } %>
                <% } %>

                <!-- Manage Clinics Tab -->
                <% if (tab === 'manage') { %>
                    <!-- Search Bar -->
                    <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 mb-6">
                        <form method="get" action="/admin/dashboard" class="flex gap-4">
                            <input type="hidden" name="tab" value="manage">
                            <input type="text" 
                                   name="search" 
                                   value="<%= searchTerm %>"
                                   placeholder="Search by clinic name, email, address, or phone..."
                                   class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent-green focus:border-accent-green">
                            <button type="submit" 
                                    class="bg-accent-green hover:bg-green-700 text-white px-6 py-2 rounded-lg font-medium transition shadow-md">
                                <i class="fa-solid fa-search mr-2"></i>Search
                            </button>
                            <% if (searchTerm) { %>
                                <a href="/admin/dashboard?tab=manage" 
                                   class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium transition">
                                    Clear
                                </a>
                            <% } %>
                        </form>
                    </div>

                    <!-- Clinics Table -->
                    <% if (clinics && clinics.length > 0) { %>
                        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clinic Name</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Approved</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% clinics.forEach((clinic) => { %>
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="text-sm font-medium text-gray-900"><%= clinic.clinicName %></div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="text-sm text-gray-900"><%= clinic.email %></div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="text-sm text-gray-900"><%= clinic.phone %></div>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="text-sm text-gray-900"><%= clinic.address %></div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= clinic.status ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                                        <%= clinic.status ? 'Active' : 'Banned' %>
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= clinic.approved ? 'bg-blue-100 text-blue-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                        <%= clinic.approved ? 'Approved' : 'Pending' %>
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                    <div class="flex gap-2">
                                                        <% if (clinic.status) { %>
                                                            <form method="post" action="/admin/clinic/ban" class="inline">
                                                                <input type="hidden" name="clinicId" value="<%= clinic._id %>">
                                                                <button type="submit" 
                                                                    class="text-red-600 hover:text-red-900"
                                                                    onclick="return confirm('Are you sure you want to ban this clinic?')">
                                                                    Ban
                                                                </button>
                                                            </form>
                                                        <% } else { %>
                                                            <form method="post" action="/admin/clinic/unban" class="inline">
                                                                <input type="hidden" name="clinicId" value="<%= clinic._id %>">
                                                                <button type="submit" class="text-green-600 hover:text-green-900">Unban</button>
                                                            </form>
                                                        <% } %>
                                                        <% if (clinic.approved) { %>
                                                            <form method="post" action="/admin/clinic/deapprove" class="inline">
                                                                <input type="hidden" name="clinicId" value="<%= clinic._id %>">
                                                                <button type="submit" 
                                                                    class="text-yellow-600 hover:text-yellow-900"
                                                                    onclick="return confirm('Are you sure you want to deapprove this clinic?')">
                                                                    Deapprove
                                                                </button>
                                                            </form>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-12 text-center">
                            <i class="fa-solid fa-search text-6xl text-gray-300 mb-4"></i>
                            <p class="text-xl text-gray-600">No clinics found</p>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>

