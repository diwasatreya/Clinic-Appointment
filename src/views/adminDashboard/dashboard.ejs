<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="../../css/style.css">
    <style>
        .accent-green { color: #10b981; }
        .bg-accent-green { background-color: #10b981; }
        .hover\:bg-accent-green:hover { background-color: #059669; }
        .border-accent-green { border-color: #10b981; }
        .text-accent-green { color: #10b981; }
    </style>
</head>
<body class="bg-gray-50">
    <div id="admin-sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 hidden z-40"></div>
    <div class="flex h-screen">
        <%- include('./partials/sidebar') %>

        <div class="flex-1 overflow-y-auto">
            <div class="p-8">
                <div class="flex items-center justify-between mb-4 md:hidden">
                    <button id="open-admin-sidebar-btn" class="p-2 rounded-md bg-white shadow text-gray-700">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <h2 class="text-lg font-semibold">Admin Panel</h2>
                    <div></div>
                </div>

                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-gray-800">
                        <% if (tab === 'pending') { %>
                            Pending Clinic Approvals
                        <% } else { %>
                            Manage Clinics
                        <% } %>
                    </h2>
                    <p class="text-gray-600 mt-2">
                        <% if (tab === 'pending') { %>
                            Review and approve or decline clinic registrations
                        <% } else { %>
                            Search, ban, and manage clinic approvals
                        <% } %>
                    </p>
                </div>

                <!-- Tab Content -->
                <% if (tab === 'pending') { %>
                    <%- include('./partials/pendingTab') %>
                <% } else if (tab === 'manage') { %>
                    <%- include('./partials/manageTab') %>
                <% } %>
            </div>
        </div>
    </div>
    <script>
        function openAdminSidebar() {
            const sidebar = document.getElementById('admin-sidebar');
            const overlay = document.getElementById('admin-sidebar-overlay');
            if (!sidebar || !overlay) return;
            sidebar.classList.remove('hidden');
            sidebar.classList.add('fixed', 'inset-y-0', 'left-0');
            overlay.classList.remove('hidden');
        }

        function closeAdminSidebar() {
            const sidebar = document.getElementById('admin-sidebar');
            const overlay = document.getElementById('admin-sidebar-overlay');
            if (!sidebar || !overlay) return;
            sidebar.classList.add('hidden');
            sidebar.classList.remove('fixed', 'inset-y-0', 'left-0');
            overlay.classList.add('hidden');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const openBtn = document.getElementById('open-admin-sidebar-btn');
            const closeBtn = document.getElementById('close-admin-sidebar-btn');
            const overlay = document.getElementById('admin-sidebar-overlay');

            if (openBtn) openBtn.addEventListener('click', openAdminSidebar);
            if (closeBtn) closeBtn.addEventListener('click', closeAdminSidebar);
            if (overlay) overlay.addEventListener('click', closeAdminSidebar);
        });
    </script>
</body>
</html>
