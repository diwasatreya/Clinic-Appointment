<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4 pt-6 border-t border-gray-100">
    <div>
        <h4 class="text-sm font-semibold text-gray-800 mb-3 flex items-center gap-2">
            <i class="fa-solid fa-building text-accent-green"></i> Clinic info
        </h4>
        <div class="space-y-2 text-sm text-gray-700">
            <p><span class="font-medium text-gray-600">Description</span><br><%= clinic.description || 'â€”' %></p>
            <p><span class="font-medium text-gray-600">Address</span><br><%= clinic.address %></p>
            <p><span class="font-medium text-gray-600">Phone</span><br><%= clinic.phone %></p>
            <p><span class="font-medium text-gray-600">Email</span><br><%= clinic.email %></p>
            <% if (clinic.opening) { %><p><span class="font-medium text-gray-600">Hours</span><br><%= clinic.opening %></p><% } %>
            <% if (clinic.speciality && clinic.speciality.length > 0) { %><p><span class="font-medium text-gray-600">Speciality</span><br><%= clinic.speciality.join(', ') %></p><% } %>
            <% if (clinic.googleMapLink) { %><p><a href="<%= clinic.googleMapLink %>" target="_blank" class="text-accent-green hover:underline">Google Maps</a></p><% } %>
        </div>
        <% if (clinic.verificationDocument) { %>
        <div class="mt-4 pt-3 border-t border-gray-100">
            <p class="text-xs font-semibold text-gray-600 mb-2 flex items-center gap-1">
                <i class="fa-solid fa-file-certificate text-accent-green"></i> Verification document
            </p>
            <% const isImage = /\.(jpg|jpeg|png|gif|webp)$/i.test(clinic.verificationDocument); %>
            <% if (isImage) { %>
            <a href="<%= clinic.verificationDocument %>" target="_blank" rel="noopener" class="block rounded-lg overflow-hidden border border-gray-200 bg-gray-50 max-w-xs">
                <img src="<%= clinic.verificationDocument %>" alt="Clinic verification" class="w-full h-auto max-h-48 object-contain">
            </a>
            <a href="<%= clinic.verificationDocument %>" target="_blank" rel="noopener" class="inline-flex items-center gap-1 mt-1 text-xs text-accent-green hover:underline">Open full size</a>
            <% } else { %>
            <a href="<%= clinic.verificationDocument %>" target="_blank" rel="noopener"
                class="inline-flex items-center gap-2 text-sm font-medium text-accent-green hover:underline">
                <i class="fa-solid fa-file-pdf"></i> View document
            </a>
            <% } %>
        </div>
        <% } %>
    </div>
    <div>
        <h4 class="text-sm font-semibold text-gray-800 mb-3 flex items-center gap-2">
            <i class="fa-solid fa-user-doctor text-accent-green"></i> Doctors & slots
        </h4>
        <% if (doctors && doctors.length > 0) { %>
        <div class="space-y-3">
            <% doctors.forEach((doctor) => { %>
            <div class="bg-gray-50 rounded-xl p-4 border border-gray-100">
                <p class="font-semibold text-gray-900">Dr. <%= doctor.name %></p>
                <p class="text-sm text-gray-600">Speciality: <%= doctor.speciality %></p>
                <% if (doctor.description) { %><p class="text-xs text-gray-500 mt-1"><%= doctor.description %></p><% } %>
                <% if (doctor.time && doctor.time.length > 0) { %>
                <div class="mt-2 flex flex-wrap gap-1.5">
                    <% doctor.time.forEach((slot) => { %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-lg text-xs bg-accent-green/10 text-accent-green border border-accent-green/20">
                        <%= typeof slot === 'string' ? slot : slot.time %>
                        <% if (typeof slot === 'object' && slot.limit) { %><span class="text-gray-500 ml-0.5">(max <%= slot.limit %>)</span><% } %>
                    </span>
                    <% }) %>
                </div>
                <% } else { %><p class="text-xs text-gray-500 mt-1">No slots</p><% } %>
            </div>
            <% }) %>
        </div>
        <% } else { %>
        <p class="text-gray-500 text-sm">No doctors added</p>
        <% } %>
    </div>
</div>
