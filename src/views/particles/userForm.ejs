<div id="patient-form-container" class="form-container space-y-6">
    <form class="space-y-6" action="/auth/signup" method="post">
        <input type="hidden" name="accType" id="accType" value="userAcc">
        <!-- Name Fields -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label for="p-first-name" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                <input id="p-first-name" name="firstName" type="text" autocomplete="given-name" required
                    placeholder="Krishna"
                    class="form-input-focus w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm transition duration-150">
            </div>
            <div>
                <label for="p-last-name" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                <input id="p-last-name" name="lastName" type="text" autocomplete="family-name" required
                    placeholder="Poudel"
                    class="form-input-focus w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm transition duration-150">
            </div>
        </div>

        <!-- Phone Number -->
        <div>
            <label for="p-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
            <input id="p-phone" name="phone" type="tel" autocomplete="tel" required
                placeholder="9812345678" pattern="[0-9]{10}" maxlength="10" inputmode="numeric"
                class="form-input-focus w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm transition duration-150">
        </div>

        <!-- Password Fields -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label for="p-password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <div class="relative">
                    <input id="p-password" name="password" type="password" autocomplete="new-password" required
                        placeholder="••••••••" minlength="8" maxlength="128"
                        class="form-input-focus w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm transition duration-150">
                    <button type="button" id="toggle-p-password" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-500 focus:outline-none">
                        <i class="fa-solid fa-eye" id="p-password-icon"></i>
                    </button>
                </div>
                <p class="mt-1 text-xs text-gray-500">Minimum 8 characters with at least one number and one symbol</p>
            </div>
            <div>
                <label for="p-confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm
                    Password</label>
                <div class="relative">
                    <input id="p-confirm-password" name="confirmPassword" type="password" autocomplete="new-password" required
                        placeholder="••••••••"
                        class="form-input-focus w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm transition duration-150">
                    <button type="button" id="toggle-p-confirm-password" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-500 focus:outline-none">
                        <i class="fa-solid fa-eye" id="p-confirm-password-icon"></i>
                    </button>
                </div>
            </div>
        </div>

        <script>
            // Password visibility toggle for user form
            function setupPasswordToggle(toggleId, inputId, iconId) {
                const toggleBtn = document.getElementById(toggleId);
                if (toggleBtn) {
                    toggleBtn.addEventListener('click', function() {
                        const passwordInput = document.getElementById(inputId);
                        const eyeIcon = document.getElementById(iconId);
                        
                        if (passwordInput.type === 'password') {
                            passwordInput.type = 'text';
                            eyeIcon.classList.remove('fa-eye');
                            eyeIcon.classList.add('fa-eye-slash');
                        } else {
                            passwordInput.type = 'password';
                            eyeIcon.classList.remove('fa-eye-slash');
                            eyeIcon.classList.add('fa-eye');
                        }
                    });
                }
            }

            // Setup toggles when DOM is ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setupPasswordToggle('toggle-p-password', 'p-password', 'p-password-icon');
                    setupPasswordToggle('toggle-p-confirm-password', 'p-confirm-password', 'p-confirm-password-icon');
                });
            } else {
                setupPasswordToggle('toggle-p-password', 'p-password', 'p-password-icon');
                setupPasswordToggle('toggle-p-confirm-password', 'p-confirm-password', 'p-confirm-password-icon');
            }
        </script>

        <!-- Terms & Conditions Checkbox -->
        <div class="flex items-start">
            <input id="p-terms-consent" name="termsConsent" type="checkbox" required
                class="h-4 w-4 text-accent-green border-gray-300 rounded focus:ring-accent-green mt-1">
            <label for="p-terms-consent" class="ml-3 text-sm text-gray-700">
                I agree to the <a href="#" class="font-medium text-primary-blue hover:underline">Terms of
                    Service</a> and Privacy Policy.
            </label>
        </div>

        <div>
            <button type="submit"
                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-base font-semibold text-white bg-accent-green hover:bg-green-700 focus:outline-none focus:ring-4 focus:ring-accent-green/50 transition duration-200">
                Create Patient Account
            </button>
        </div>
    </form>
</div>