<div id="clinic-form-container" class="form-container space-y-6 hidden">
    <form class="space-y-6" action="/auth/signup" method="post">
        <input type="hidden" name="accType" id="accType" value="clinicAcc">
        <div>
            <label for="c-clinic-name" class="block text-sm font-medium text-gray-700 mb-1">Clinic Name</label>
            <input id="c-clinic-name" name="clinicName" type="text" required
                placeholder="Clinic Name"
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-accent-green/40 focus:border-accent-green transition">
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label for="c-email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input id="c-email" name="email" type="email" autocomplete="email" required
                    placeholder="clinic@email.com"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-accent-green/40 focus:border-accent-green transition">
            </div>
            <div>
                <label for="c-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input id="c-phone" name="phone" type="tel" autocomplete="tel" required
                    placeholder="9812345678" pattern="[0-9]{10}" maxlength="10" inputmode="numeric"
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-accent-green/40 focus:border-accent-green transition">
            </div>
        </div>

        <div>
            <label for="c-address" class="block text-sm font-medium text-gray-700 mb-1">Address</label>
            <input id="c-address" name="address" type="text" required
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-accent-green/40 focus:border-accent-green transition">
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label for="c-password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <div class="relative">
                    <input id="c-password" name="password" type="password" autocomplete="new-password" required
                        placeholder="••••••••" minlength="8" maxlength="128"
                        class="form-input-focus w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm transition duration-150">
                    <button type="button" id="toggle-c-password" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-500 focus:outline-none">
                        <i class="fa-solid fa-eye" id="c-password-icon"></i>
                    </button>
                </div>
                <p class="mt-1 text-xs text-gray-500">Minimum 8 characters with at least one number and one symbol</p>
            </div>
            <div>
                <label for="c-confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm
                    Password</label>
                <div class="relative">
                    <input id="c-confirm-password" name="confirmPassword" type="password" autocomplete="new-password" required
                        placeholder="••••••••"
                        class="form-input-focus w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg shadow-sm transition duration-150">
                    <button type="button" id="toggle-c-confirm-password" class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-500 focus:outline-none">
                        <i class="fa-solid fa-eye" id="c-confirm-password-icon"></i>
                    </button>
                </div>
            </div>
        </div>

        <script>
            // Password visibility toggle for clinic form
            function setupPasswordToggle(toggleId, inputId, iconId) {
                const toggleBtn = document.getElementById(toggleId);
                if (toggleBtn) {
                    toggleBtn.addEventListener('click', function() {
                        const passwordInput = document.getElementById(inputId);
                        const eyeIcon = document.getElementById(iconId);
                        
                        if (passwordInput.type === 'password') {
                            passwordInput.type = 'text';
                            eyeIcon.classList.remove('fa-eye');
                            eyeIcon.classList.add('fa-eye-slash');
                        } else {
                            passwordInput.type = 'password';
                            eyeIcon.classList.remove('fa-eye-slash');
                            eyeIcon.classList.add('fa-eye');
                        }
                    });
                }
            }

            // Setup toggles when DOM is ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setupPasswordToggle('toggle-c-password', 'c-password', 'c-password-icon');
                    setupPasswordToggle('toggle-c-confirm-password', 'c-confirm-password', 'c-confirm-password-icon');
                });
            } else {
                setupPasswordToggle('toggle-c-password', 'c-password', 'c-password-icon');
                setupPasswordToggle('toggle-c-confirm-password', 'c-confirm-password', 'c-confirm-password-icon');
            }
        </script>

        <!-- Terms & Conditions Checkbox for Clinics -->
        <div class="flex items-start">
            <input id="c-terms-consent" name="termsConsent" type="checkbox" required
                class="h-4 w-4 text-accent-green border-gray-300 rounded focus:ring-accent-green mt-1">
            <label for="c-terms-consent" class="ml-3 text-sm text-gray-700">
                I confirm my clinic accepts the <a href="#"
                    class="font-medium text-primary-blue hover:underline">Partner Terms</a>.
            </label>
        </div>

        <div class="pt-2">
            <button type="submit"
                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-base font-semibold text-white bg-accent-green hover:bg-green-700 focus:outline-none focus:ring-4 focus:ring-primary-blue/50 transition duration-200">
                Register Clinic
            </button>
        </div>
    </form>
</div>