<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Appointments | FindaCare</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
  <link rel="stylesheet" href="./css/style.css">
  <script src="./js/tailwind.js"></script>
</head>

<body class="flex flex-col min-h-screen bg-gray-50 font-sans antialiased">
  <%- include('./particles/header') %>

    <main class="flex-grow w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-8 flex items-center">
        My Appointments
      </h1>

      <!-- UPCOMING APPOINTMENTS -->
      <section id="upcoming-appointments" class="space-y-6 mb-16">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center">
          <i class="fa-solid fa-calendar-check text-accent-green mr-2"></i>
          Upcoming Appointments (<%= upComingAppoints.length %>)
        </h2>

        <!-- Appointment 1 -->
        <% upComingAppoints.forEach((appoint)=> { %>
          <div
            class="bg-white shadow-lg rounded-xl p-5 border-l-4 border-accent-green transition hover:shadow-xl duration-300">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
              <div class="flex items-center gap-4">
                <div class="text-center bg-accent-light p-3 rounded-lg">
                  <p class="text-xl font-bold text-accent-green">
                    <%= appoint.ui.formattedDate.split(' ')[0] %></p>
                <p class="text-xs text-gray-500 uppercase"><%= appoint.ui.formattedDate.split(' ')[1] %></p>
              </div>
              <div>
                <p class="text-lg font-bold text-gray-900"><%= appoint.ui.dayName %>, <%= appoint.appointmentTime %></p>
                <p class="text-sm text-gray-600"><%= appoint.checkupType %></p>
              </div>
            </div>
            <span
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%- (appoint.status == 'Pending') ? 'bg-warning/10 text-warning ring-warning/20' : 'bg-success/10 text-success ring-success/20' %> ring-1">
                      <%= appoint.status %>
                        </span>
                </div>

                <hr class="my-4 border-gray-100">

                <div class="text-sm text-gray-700 space-y-3">
                  <div>
                    <p class="font-semibold text-gray-900">Doctor:</p>
                    <p>Dr. <%= appoint.doctor %>
                    </p>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Reason for Visit:</p>
                    <p class="text-gray-600">
                      <%= appoint.reason %>
                    </p>
                  </div>
                </div>

                <div class="mt-5 flex justify-end">
                  <form action="/appoint/delete" method="post">
                    <input type="text" value="<%= appoint._id %>" name="appointId" hidden>
                  
                  <button type="submit"
                    class="cancel-btn px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition shadow">
                    Cancel Appointment
                  </button>
                  </form>
                </div>
              </div>

              <% }) %>

                <!-- PAST VISITS -->
                <section id="past-visits" class="space-y-6">
                  <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                    <i class="fa-solid fa-clock-rotate-left text-gray-600 mr-2"></i>
                    Past History (<%= completedAppoints.length %>)
                  </h2>

                  <div class="relative">
                    <input id="past-visit-search" type="text" placeholder="Search past visits by doctor or reason..."
                      class="w-full py-3 pl-10 pr-4 border border-gray-300 rounded-lg shadow-sm focus:ring-accent-green focus:border-accent-green transition">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                      <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                      </svg>
                    </div>
                  </div>

                  <!-- Visit Card -->
                  <% completedAppoints.forEach((appoint, index)=> { %>
                    <div
                      class="visit-card bg-white shadow rounded-lg p-5 border border-gray-200 hover:shadow-md transition duration-200"
                      data-doctor="Dr. <%= appoint.doctor %>" data-reason="<%= appoint.reason %>">
                      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                        <div class="flex items-center gap-4">
                          <div class="text-center bg-gray-100 p-3 rounded-md">
                            <p class="text-base font-bold text-gray-700"></p>
                            <p class="text-xs text-gray-500 uppercase">
                              <%= appoint.ui.formattedDate.split(' ')[1] %> <%= appoint.ui.formattedDate.split(' ')[0] %></p>
                </div>
                <div>
                  <p class="text-base font-semibold text-gray-900"><%= appoint.checkupType %></p>
                  <p class="text-sm text-gray-600"><strong>Doctor:</strong> Dr. <%= appoint.doctor %></p>
                </div>
              </div>
              <div class="flex flex-wrap gap-2 items-center">
                <span
                  class="inline-flex items-center px-3 py-0.5 rounded-full text-xs font-medium <%- (appoint.status == 'Completed') ? 'bg-gray-100 text-gray-700' : 'bg-red-100 text-red-700' %>"><%= appoint.status %></span>
                <button
                  class="view-summary-btn px-3 py-1.5 text-sm font-medium text-accent-green bg-accent-light rounded-lg hover:bg-accent-light/70 transition">
                  View Visit Summary
                </button>
              </div>
            </div>
          </div>

          <% }) %>

      </section>
    </main>

    
    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('past-visit-search');

        // Search Filter
        if (searchInput) {
          searchInput.addEventListener('input', e => {
            const term = e.target.value.toLowerCase();
            document.querySelectorAll('.visit-card').forEach(card => {
              const doctor = card.dataset.doctor.toLowerCase();
              const reason = card.dataset.reason.toLowerCase();
              card.style.display = doctor.includes(term) || reason.includes(term) ? 'block' : 'none';
            });
          });
        }

      });
    </script>
    <script src="./js/script.js"></script>

                      <%- include('./particles/footer') %>
</body>

</html>