<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Appointments | FindaCare</title>
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="./js/tailwind.js"></script>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body class="min-h-screen flex flex-col bg-page font-sans antialiased">
    <%- include('./particles/header') %>

    <main class="flex-grow w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-8 flex items-center gap-3">
            <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-green/10 text-accent-green">
                <i class="fa-solid fa-calendar-check text-xl"></i>
            </span>
            My appointments
        </h1>

        <!-- Upcoming -->
        <section class="mb-12">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-clock text-accent-green"></i>
                Upcoming (<%= upComingAppoints.length %>)
            </h2>
            <div class="space-y-4">
                <% upComingAppoints.forEach((appoint)=> { %>
                <div class="card card-hover p-6 border-l-4 <%- appoint.status == 'Pending' ? 'border-warning' : 'border-accent-green' %>">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                        <div class="flex items-center gap-4">
                            <div class="text-center <%- appoint.status == 'Pending' ? 'bg-amber-50 text-warning' : 'bg-accent-green-light text-accent-green' %> px-4 py-3 rounded-xl min-w-[4rem]">
                                <p class="text-xl font-bold leading-none"><%= appoint.ui.formattedDate.split(' ')[0] %></p>
                                <p class="text-xs text-gray-500 uppercase mt-1"><%= appoint.ui.formattedDate.split(' ')[1] %></p>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900"><%= appoint.ui.dayName %>, <%= appoint.appointmentTime %></p>
                                <p class="text-sm text-gray-600"><%= appoint.checkupType %></p>
                            </div>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%- appoint.status == 'Pending' ? 'bg-amber-100 text-amber-800' : 'bg-accent-green-light text-accent-green' %>">
                            <%= appoint.status %>
                        </span>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100 grid sm:grid-cols-2 gap-3 text-sm text-gray-700">
                        <div><span class="font-medium text-gray-800">Doctor:</span> Dr. <%= appoint.doctor %></div>
                        <div><span class="font-medium text-gray-800">Reason:</span> <%= appoint.reason || '—' %></div>
                    </div>
                    <div class="mt-4 flex justify-end">
                        <form action="/appoint/delete" method="post" class="inline">
                            <input type="hidden" name="appointId" value="<%= appoint._id %>">
                            <button type="submit" class="px-4 py-2 text-sm font-semibold text-white bg-red-500 rounded-xl hover:bg-red-600 transition shadow-soft">
                                Cancel appointment
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>

        <!-- Past -->
        <section>
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-clock-rotate-left text-gray-500"></i>
                Past visits (<%= completedAppoints.length %>)
            </h2>
            <div class="relative mb-6">
                <input id="past-visit-search" type="text" placeholder="Search by doctor or reason…"
                    class="w-full py-3 pl-11 pr-4 rounded-xl border border-gray-200 bg-white focus:ring-2 focus:ring-accent-green/40 focus:border-accent-green shadow-soft">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none text-gray-400">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </span>
            </div>
            <div class="space-y-4">
                <% completedAppoints.forEach((appoint)=> { %>
                <div class="visit-card card p-5" data-doctor="Dr. <%= appoint.doctor %>" data-reason="<%= appoint.reason %>">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                        <div class="flex items-center gap-4">
                            <div class="text-center bg-gray-100 px-4 py-2 rounded-xl">
                                <p class="text-xs text-gray-500 uppercase"><%= appoint.ui.formattedDate.split(' ')[1] %> <%= appoint.ui.formattedDate.split(' ')[0] %></p>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900"><%= appoint.checkupType %></p>
                                <p class="text-sm text-gray-600">Dr. <%= appoint.doctor %></p>
                            </div>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%- appoint.status == 'Completed' ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-700' %>">
                            <%= appoint.status %>
                        </span>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('past-visit-search');
            if (searchInput) {
                searchInput.addEventListener('input', e => {
                    const term = e.target.value.toLowerCase();
                    document.querySelectorAll('.visit-card').forEach(card => {
                        const doctor = (card.dataset.doctor || '').toLowerCase();
                        const reason = (card.dataset.reason || '').toLowerCase();
                        card.style.display = (doctor.includes(term) || reason.includes(term)) ? 'block' : 'none';
                    });
                });
            }
        });
    </script>
    <script src="./js/script.js"></script>
    <%- include('./particles/footer') %>
</body>
</html>
