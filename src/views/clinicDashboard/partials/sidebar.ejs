<aside id="sidebar" class="hidden md:flex md:w-64 flex-col bg-white border-r border-gray-200 h-screen md:sticky md:top-0 z-50">
    <div class="md:hidden flex items-center justify-between p-4 border-b border-gray-100">
        <a href="/" class="flex items-center gap-2">
            <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-accent-green/10 text-accent-green"><i class="fa-solid fa-heart-pulse"></i></span>
            <span class="font-bold text-gray-900">FindaCare</span>
        </a>
        <button id="close-sidebar-btn" class="p-2 rounded-lg text-gray-600 hover:bg-gray-100" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
    </div>
    <div class="p-6 border-b border-gray-100 hidden md:block">
        <a href="/" class="flex items-center gap-2">
            <span class="flex h-10 w-10 items-center justify-center rounded-xl bg-accent-green/10 text-accent-green"><i class="fa-solid fa-heart-pulse"></i></span>
            <span class="text-xl font-bold text-gray-900">FindaCare</span>
        </a>
    </div>
    <nav class="flex-1 p-4 space-y-1">
        <a href="/clinic/dashboard?tab=overview" class="flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition <%= (typeof query === 'undefined' || !query.tab || query.tab === 'overview') ? 'bg-accent-green text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fa-solid fa-gauge-high w-5 text-center"></i> Overview
        </a>
        <a href="/clinic/dashboard?tab=appointments" class="flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition <%= (typeof query !== 'undefined' && query.tab === 'appointments') ? 'bg-accent-green text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fa-solid fa-calendar-check w-5 text-center"></i> Appointments
        </a>
        <a href="/clinic/dashboard?tab=clinic-info" class="flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition <%= (typeof query !== 'undefined' && query.tab === 'clinic-info') ? 'bg-accent-green text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fa-solid fa-building w-5 text-center"></i> Clinic Info
        </a>
        <a href="/clinic/dashboard?tab=doctors" class="flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition <%= (typeof query !== 'undefined' && query.tab === 'doctors') ? 'bg-accent-green text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fa-solid fa-user-doctor w-5 text-center"></i> Doctors
        </a>
        <a href="/clinic/dashboard?tab=settings" class="flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition <%= (typeof query !== 'undefined' && query.tab === 'settings') ? 'bg-accent-green text-white' : 'text-gray-700 hover:bg-gray-100' %>">
            <i class="fa-solid fa-cog w-5 text-center"></i> Settings
        </a>
    </nav>
    <div class="p-4 border-t border-gray-100">
        <div class="mb-3 px-2">
            <p class="text-sm font-semibold text-gray-800 truncate" title="<%= dataClinic.clinicName %>"><%= dataClinic.clinicName %></p>
            <p class="text-xs text-gray-500 truncate" title="<%= dataClinic.email %>"><%= dataClinic.email %></p>
        </div>
        <a href="/auth/logout" class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-600 font-medium hover:bg-red-50 transition">
            <i class="fa-solid fa-right-from-bracket w-5 text-center"></i> Logout
        </a>
    </div>
</aside>

