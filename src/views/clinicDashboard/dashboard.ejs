<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %> - Dashboard</title>
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="../js/tailwind.js"></script>
    <link rel="stylesheet" href="../css/style.css">
</head>

<body class="bg-gray-50 min-h-screen flex">
    <%- include('./partials/sidebar') %>

    <!-- Main Content -->
    <main class="flex-1 overflow-x-hidden">
        <div class="p-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-extrabold text-gray-900">Dashboard</h1>
                <p class="text-gray-600 mt-1">Welcome back, <%= dataClinic.clinicName %></p>
            </div>

            <!-- Error Message -->
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <%= decodeURIComponent(query.error) %>
                </div>
            <% } %>

            <!-- Tab Content -->
            <% if (typeof query === 'undefined' || !query.tab || query.tab === 'overview') { %>
                <%- include('./partials/overviewTab') %>
            <% } else if (query.tab === 'appointments') { %>
                <%- include('./partials/appointmentsTab') %>
            <% } else if (query.tab === 'clinic-info') { %>
                <%- include('./partials/clinicInfoTab') %>
            <% } else if (query.tab === 'doctors') { %>
                <%- include('./partials/doctorsTab') %>
            <% } else if (query.tab === 'settings') { %>
                <%- include('./partials/settingsTab') %>
            <% } %>
        </div>
    </main>

    <%- include('./partials/modals') %>
    <%- include('./partials/scripts') %>
</body>

</html>
