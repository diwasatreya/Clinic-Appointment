<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %> - Dashboard</title>
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="../js/tailwind.js"></script>
    
    <link rel="stylesheet" href="../css/style.css">
</head>

<body class="bg-gray-50 min-h-screen flex">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg flex flex-col h-screen sticky top-0">
        <!-- Logo -->
        <div class="p-6 border-b">
            <div class="flex items-center">
                <i class="fa-solid fa-heart-pulse text-3xl text-accent-green mr-2"></i>
                <h1 class="text-2xl font-extrabold">FindaCare</h1>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4">
            <a href="/clinic/dashboard?tab=overview" class="flex items-center px-4 py-3 text-gray-700 <%= (typeof query === 'undefined' || !query.tab || query.tab === 'overview') ? 'bg-accent-green bg-opacity-10 rounded-lg mb-2' : 'hover:bg-gray-50 rounded-lg mb-2' %>">
                <i class="fa-solid fa-gauge-high mr-3 <%= (typeof query === 'undefined' || !query.tab || query.tab === 'overview') ? 'text-accent-green' : 'text-gray-600' %>"></i>
                <span class="font-medium">Overview</span>
            </a>
            <a href="/clinic/dashboard?tab=appointments" class="flex items-center px-4 py-3 text-gray-700 <%= (typeof query !== 'undefined' && query.tab === 'appointments') ? 'bg-accent-green bg-opacity-10 rounded-lg mb-2' : 'hover:bg-gray-50 rounded-lg mb-2' %>">
                <i class="fa-solid fa-calendar-check mr-3 <%= (typeof query !== 'undefined' && query.tab === 'appointments') ? 'text-accent-green' : 'text-gray-600' %>"></i>
                <span class="font-medium">Appointments</span>
            </a>
            <a href="/clinic/dashboard?tab=clinic-info" class="flex items-center px-4 py-3 text-gray-700 <%= (typeof query !== 'undefined' && query.tab === 'clinic-info') ? 'bg-accent-green bg-opacity-10 rounded-lg mb-2' : 'hover:bg-gray-50 rounded-lg mb-2' %>">
                <i class="fa-solid fa-building mr-3 <%= (typeof query !== 'undefined' && query.tab === 'clinic-info') ? 'text-accent-green' : 'text-gray-600' %>"></i>
                <span class="font-medium">Clinic Info</span>
            </a>
            <a href="/clinic/dashboard?tab=doctors" class="flex items-center px-4 py-3 text-gray-700 <%= (typeof query !== 'undefined' && query.tab === 'doctors') ? 'bg-accent-green bg-opacity-10 rounded-lg mb-2' : 'hover:bg-gray-50 rounded-lg mb-2' %>">
                <i class="fa-solid fa-user-doctor mr-3 <%= (typeof query !== 'undefined' && query.tab === 'doctors') ? 'text-accent-green' : 'text-gray-600' %>"></i>
                <span class="font-medium">Doctors</span>
            </a>
            <a href="/clinic/dashboard?tab=settings" class="flex items-center px-4 py-3 text-gray-700 <%= (typeof query !== 'undefined' && query.tab === 'settings') ? 'bg-accent-green bg-opacity-10 rounded-lg mb-2' : 'hover:bg-gray-50 rounded-lg mb-2' %>">
                <i class="fa-solid fa-cog mr-3 <%= (typeof query !== 'undefined' && query.tab === 'settings') ? 'text-accent-green' : 'text-gray-600' %>"></i>
                <span class="font-medium">Settings</span>
            </a>
        </nav>

        <!-- Clinic Info & Logout -->
        <div class="p-4 border-t">
            <div class="mb-3">
                <p class="text-sm font-semibold text-gray-800"><%= dataClinic.clinicName %></p>
                <p class="text-xs text-gray-500"><%= dataClinic.email %></p>
            </div>
            <a href="/auth/logout" class="flex items-center px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition">
                <i class="fa-solid fa-sign-out-alt mr-3"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-x-hidden">
        <div class="p-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-extrabold text-gray-900">Dashboard</h1>
                <p class="text-gray-600 mt-1">Welcome back, <%= dataClinic.clinicName %></p>
            </div>

            <!-- Error Message -->
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <%= decodeURIComponent(query.error) %>
                </div>
            <% } %>

            <!-- Overview Tab -->
            <% if (typeof query === 'undefined' || !query.tab || query.tab === 'overview') { %>
                <!-- Statistics Cards -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Total Appointments</p>
                                <p class="text-3xl font-bold text-gray-900 mt-2"><%= stats.total %></p>
                            </div>
                            <div class="bg-blue-100 p-4 rounded-full">
                                <i class="fa-solid fa-calendar-check text-blue-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Pending</p>
                                <p class="text-3xl font-bold text-yellow-600 mt-2"><%= stats.pending %></p>
                            </div>
                            <div class="bg-yellow-100 p-4 rounded-full">
                                <i class="fa-solid fa-clock text-yellow-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Approved</p>
                                <p class="text-3xl font-bold text-green-600 mt-2"><%= stats.approved %></p>
                            </div>
                            <div class="bg-green-100 p-4 rounded-full">
                                <i class="fa-solid fa-check-circle text-green-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Cancelled</p>
                                <p class="text-3xl font-bold text-red-600 mt-2"><%= stats.cancelled %></p>
                            </div>
                            <div class="bg-red-100 p-4 rounded-full">
                                <i class="fa-solid fa-times-circle text-red-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Appointments Tab -->
            <% if (typeof query !== 'undefined' && query.tab === 'appointments') { %>
                <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b">
                        <h2 class="text-xl font-bold text-gray-900">Appointments</h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Doctor</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (appointments && appointments.length > 0) { %>
                                    <% appointments.forEach((appointment) => { %>
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div>
                                                    <div class="text-sm font-medium text-gray-900">
                                                        <%= appointment.user ? appointment.user.name : 'N/A' %>
                                                    </div>
                                                    <div class="text-sm text-gray-500">
                                                        <%= appointment.user ? appointment.user.phone : '' %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm text-gray-900">
                                                    <%= appointment.doctor ? `Dr. ${appointment.doctor.name}` : 'N/A' %>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm text-gray-900"><%= appointment.appointmentDate %></div>
                                                <div class="text-sm text-gray-500"><%= appointment.appointmentTime %></div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm text-gray-900"><%= appointment.checkupType %></div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <% 
                                                    let statusClass = 'bg-gray-100 text-gray-800';
                                                    if (appointment.status === 'Approved') statusClass = 'bg-green-100 text-green-800';
                                                    else if (appointment.status === 'Canceled') statusClass = 'bg-red-100 text-red-800';
                                                    else if (appointment.status === 'Pending') statusClass = 'bg-yellow-100 text-yellow-800';
                                                %>
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= statusClass %>">
                                                    <%= appointment.status %>
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                <% if (appointment.status === 'Pending') { %>
                                                    <div class="flex space-x-2">
                                                        <form action="/clinic/appointment/approve" method="POST" class="inline">
                                                            <input type="hidden" name="appointmentId" value="<%= appointment._id %>">
                                                            <button type="submit" class="text-accent-green hover:text-green-700 px-3 py-1 rounded hover:bg-accent-green/10 transition">
                                                                <i class="fa-solid fa-check mr-1"></i>Approve
                                                            </button>
                                                        </form>
                                                        <button onclick="openCancelModal('<%= appointment._id %>')" class="text-red-600 hover:text-red-900 px-3 py-1 rounded hover:bg-red-50 transition">
                                                            <i class="fa-solid fa-times mr-1"></i>Cancel
                                                        </button>
                                                    </div>
                                                <% } else if (appointment.status === 'Canceled' && appointment.cancellationReason) { %>
                                                    <div class="text-xs text-gray-500" title="<%= appointment.cancellationReason %>">
                                                        <i class="fa-solid fa-info-circle"></i> Reason provided
                                                    </div>
                                                <% } else { %>
                                                    <span class="text-gray-400">-</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                                            No appointments found.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } %>

            <!-- Clinic Info Tab -->
            <% if (typeof query !== 'undefined' && query.tab === 'clinic-info') { %>
                <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                    <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 mb-6 flex items-center">
                        <i class="fa-solid fa-building mr-2 text-accent-green"></i>
                        Clinic Information
                    </h2>

                    <form method="post" action="/clinic/update">
                        <input type="hidden" name="redirectTab" value="clinic-info">
                        <div class="mb-6">
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                                Description
                            </label>
                            <textarea name="description" id="description" rows="4"
                                placeholder="A detailed summary of the clinic, its mission, and what it offers..."
                                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border"
                                required><%= dataClinic.description || '' %></textarea>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                                    Address
                                </label>
                                <input name="address" value="<%= dataClinic.address || '' %>" type="text" id="location"
                                    placeholder="123 Health Ave, City, Zip"
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border" required>
                            </div>
                            <div>
                                <label for="hours" class="block text-sm font-medium text-gray-700 mb-2">
                                    Opening Hours
                                </label>
                                <input name="opening" value="<%= dataClinic.opening || '' %>" type="text" id="hours"
                                    placeholder="Mon-Fri: 9:00 AM - 5:00 PM; Sat: 10:00 AM - 2:00 PM"
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border" required>
                            </div>

                            <div>
                                <label for="speciality" class="block text-sm font-medium text-gray-700 mb-2">
                                    Speciality
                                </label>
                                <input name="speciality" value="<%= tags || '' %>" type="text" id="speciality"
                                    placeholder="Cardiology, General Medicine, Pediatrics, Orthopedics"
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border" required>
                            </div>
                            <div class="flex items-end">
                                <button type="submit"
                                    class="w-full bg-accent-green hover:bg-green-700 text-white py-3 px-8 rounded-lg text-sm font-medium transition duration-150 shadow-md">
                                    <i class="fa-solid fa-save mr-2"></i>
                                    Update Information
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            <% } %>

            <!-- Doctors Tab -->
            <% if (typeof query !== 'undefined' && query.tab === 'doctors') { %>
                <div class="space-y-6">
                    <!-- Manage Doctors Section -->
                    <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 mb-6 flex justify-between items-center">
                            <span><i class="fa-solid fa-user-doctor mr-2 text-accent-green"></i>Manage Doctors</span>
                            <button id="open-doctor-modal"
                                class="bg-accent-green hover:bg-green-600 text-white py-2 px-4 rounded-lg text-sm font-medium transition duration-150 shadow-md">
                                <i class="fa-solid fa-plus mr-1"></i>Add Doctor
                            </button>
                        </h2>

                        <div class="space-y-4">
                            <% if (doctors && doctors.length > 0) { %>
                                <% doctors.forEach((doctor)=> { %>
                                    <div class="p-4 bg-accent-green/10 border border-accent-green/20 rounded-lg flex justify-between items-start">
                                        <div class="flex-1">
                                            <p class="font-semibold text-lg text-accent-green">Dr. <%= doctor.name %></p>
                                            <p class="text-sm text-gray-600 mt-1">Speciality: <strong><%= doctor.speciality %></strong></p>
                                            <p class="text-xs text-gray-500 mt-2"><%= doctor.description %></p>
                                        </div>
                                        <div class="ml-4">
                                            <form action="/clinic/doctor/delete" method="post">
                                                <input type="hidden" name="redirectTab" value="doctors">
                                                <input type="text" name="doctorId" value="<%= doctor._id  %>" hidden>
                                                <button type="submit" class="text-sm text-red-600 hover:text-red-800 px-3 py-1 rounded hover:bg-red-50 transition">
                                                    <i class="fa-solid fa-trash mr-1"></i>Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-gray-500 text-center py-8">No doctors added yet. Click "Add Doctor" to get started.</p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Time Slots Section -->
                    <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 mb-6">
                            <i class="fa-solid fa-clock mr-2 text-accent-green"></i>Time Slots
                        </h2>

                        <form method="post" action="/clinic/doctor/time"
                            class="grid grid-cols-1 md:grid-cols-5 gap-4 items-end mb-6">
                            <input type="hidden" name="redirectTab" value="doctors">
                            <div class="flex flex-grow gap-4 col-span-4">
                                <div class="w-1/2">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Time</label>
                                    <input type="time" name="time"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border text-sm"
                                        required>
                                </div>
                                <div class="w-1/2">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Doctor</label>
                                    <select name="doctorId"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border text-sm">
                                        <% if (doctors && doctors.length > 0) { %>
                                            <% doctors.forEach(doctor=> { %>
                                                <option value="<%= doctor._id %>"><%= doctor.name %></option>
                                            <% }) %>
                                        <% } else { %>
                                            <option disabled>No doctors available</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" <%- (!doctors || doctors.length == 0) ? 'disabled' : '' %>
                                class="md:col-span-1 <%- (!doctors || doctors.length == 0) ? 'bg-gray-400 cursor-not-allowed' : 'bg-accent-green hover:bg-green-600' %> text-white font-medium py-2.5 rounded-lg transition duration-150 shadow-md">
                                <i class="fa-solid fa-plus mr-1"></i>Add Slot
                            </button>
                        </form>

                        <div class="text-sm text-gray-600">
                            <p class="font-semibold mb-3">Available Time Slots:</p>
                            <ul class="space-y-2">
                                <% if (doctors && doctors.length > 0) { %>
                                    <% doctors.forEach(doctor=> { %>
                                        <% if (doctor.time && doctor.time.length > 0) { %>
                                            <% doctor.time.forEach(t=> { %>
                                                <li class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                                                    <span><strong><%= t %></strong> <span class="text-gray-500">(Dr. <%= doctor.name %>)</span></span>
                                                    <form action="/clinic/doctor/time/delete" method="post" class="inline">
                                                        <input type="hidden" name="redirectTab" value="doctors">
                                                        <input type="text" name="doctorId" value="<%= doctor._id %>" hidden>
                                                        <input type="text" name="time" value="<%= t %>" hidden>
                                                        <button type="submit" class="text-red-500 hover:text-red-700 text-xs px-2 py-1 rounded hover:bg-red-50 transition">
                                                            <i class="fa-solid fa-times mr-1"></i>Remove
                                                        </button>
                                                    </form>
                                                </li>
                                            <% }) %>
                                        <% } %>
                                    <% }) %>
                                <% } %>
                                <% if (!doctors || doctors.length == 0 || (doctors && doctors.every(d => !d.time || d.time.length == 0))) { %>
                                    <li class="text-gray-500 text-center py-4">No time slots added yet.</li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Settings Tab -->
            <% if (typeof query !== 'undefined' && query.tab === 'settings') { %>
                <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                    <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 mb-6">
                        <i class="fa-solid fa-cog mr-2 text-accent-green"></i>Settings
                    </h2>

                    <div class="space-y-6">
                        <!-- Visibility Status -->
                        <div class="border-b pb-6">
                            <label class="text-xl font-bold text-gray-800 block mb-3">
                                <i class="fa-solid fa-toggle-on mr-2 text-accent-green"></i>Visibility Status
                            </label>
                            <div class="flex justify-between items-center p-4 rounded-lg bg-gray-50 border">
                                <span class="font-medium text-gray-700" id="status-text">
                                    <%= dataClinic.status ? 'Visible to Patients' : 'Hidden from Patients' %>
                                </span>
                                <div class="relative inline-block w-14 mr-2 align-middle select-none transition duration-200 ease-in">
                                    <input type="checkbox" name="toggle" id="status-toggle"
                                        class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer transition-all"
                                        <%= dataClinic.status ? 'checked' : '' %>>
                                    <label for="status-toggle"
                                        class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-300 cursor-pointer"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Approval Status -->
                        <div class="border-b pb-6">
                            <div class="mb-4 p-4 rounded-lg <%= dataClinic.approved ? 'bg-green-50 border border-green-200' : 'bg-yellow-50 border border-yellow-200' %>">
                                <div class="flex items-center mb-2">
                                    <i class="fa-solid <%= dataClinic.approved ? 'fa-check-circle text-green-600' : 'fa-clock text-yellow-600' %> mr-2"></i>
                                    <span class="font-semibold <%= dataClinic.approved ? 'text-green-800' : 'text-yellow-800' %>">
                                        <%= dataClinic.approved ? 'Approved' : 'Pending Approval' %>
                                    </span>
                                </div>
                                <p class="text-sm <%= dataClinic.approved ? 'text-green-700' : 'text-yellow-700' %>">
                                    <%= dataClinic.approved ? 'Your clinic is approved and visible to patients.' : 'Your clinic is pending approval from administrators.' %>
                                </p>
                            </div>

                            <% if (!dataClinic.approved) { %>
                                <form method="post" action="/clinic/approval">
                                    <input type="hidden" name="redirectTab" value="settings">
                                    <button type="submit"
                                        class="bg-accent-green hover:bg-green-700  text-white font-extrabold py-3 px-6 rounded-xl shadow-xl uppercase tracking-wider transition duration-150 transform hover:scale-[1.01]">
                                        <i class="fa-solid fa-paper-plane mr-2"></i>
                                        Send for Approval
                                    </button>
                                </form>
                            <% } else { %>
                                <div class="bg-gray-200 text-gray-600 font-extrabold py-3 px-6 rounded-xl uppercase tracking-wider text-center">
                                    <i class="fa-solid fa-check-circle mr-2"></i>
                                    Approved
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Add Doctor Modal -->
    <div id="add-doctor-modal" class="fixed inset-0 z-50 overflow-y-auto hidden">
        <div class="flex items-center justify-center min-h-screen px-4 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                <div class="absolute inset-0 bg-gray-900 opacity-70"></div>
            </div>

            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <form method="post" action="/clinic/doctor/add"
                class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <input type="hidden" name="redirectTab" value="doctors">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-2xl leading-6 font-bold text-gray-900 mb-4" id="modal-title">
                                <i class="fa-solid fa-user-doctor mr-2 text-accent-green"></i>Add New Doctor
                            </h3>
                            <div class="mt-2 space-y-4">
                                <div>
                                    <label for="doctor-name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                    <input type="text" name="doctor-name" id="doctor-name"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border"
                                        placeholder="First Last Name" required>
                                </div>
                                <div>
                                    <label for="doctor-speciality" class="block text-sm font-medium text-gray-700 mb-1">Speciality</label>
                                    <input type="text" name="doctor-speciality" id="doctor-speciality"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border"
                                        placeholder="e.g., General Medicine" required>
                                </div>
                                <div>
                                    <label for="doctor-description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                                    <textarea name="doctor-description" id="doctor-description" rows="3"
                                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border"
                                        placeholder="A brief bio (max 150 characters)" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="submit"
                        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-accent-green text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-green sm:ml-3 sm:w-auto sm:text-sm">
                        <i class="fa-solid fa-save mr-2"></i>Save Doctor
                    </button>
                    <button type="button" id="close-doctor-modal"
                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-accent-green hover:text-white hover:border-accent-green focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-green sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm transition duration-150">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Cancel Appointment Modal -->
    <div id="cancel-modal" class="fixed inset-0 z-50 overflow-y-auto hidden">
        <div class="flex items-center justify-center min-h-screen px-4 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                <div class="absolute inset-0 bg-gray-900 opacity-70"></div>
            </div>

            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <form method="post" action="/clinic/appointment/cancel"
                class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-xl leading-6 font-bold text-gray-900 mb-4">
                                Cancel Appointment
                            </h3>
                            <div class="mt-2">
                                <label for="cancel-reason" class="block text-sm font-medium text-gray-700 mb-2">
                                    Cancellation Reason <span class="text-red-500">*</span>
                                </label>
                                <textarea id="cancel-reason" name="reason" rows="4" required
                                    class="block w-full rounded-md border-gray-300 shadow-sm focus:border-accent-green focus:ring-accent-green p-2 border"
                                    placeholder="Please provide a reason for cancellation..."></textarea>
                                <input type="hidden" id="cancel-appointment-id" name="appointmentId">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="submit"
                        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                        Cancel Appointment
                    </button>
                    <button type="button" onclick="closeCancelModal()"
                        class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-accent-green hover:text-white hover:border-accent-green focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-green sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm transition duration-150">
                        Close
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="../js/script.js"></script>
    <script>
        function openCancelModal(appointmentId) {
            document.getElementById('cancel-appointment-id').value = appointmentId;
            document.getElementById('cancel-modal').classList.remove('hidden');
        }

        function closeCancelModal() {
            document.getElementById('cancel-modal').classList.add('hidden');
            document.getElementById('cancel-reason').value = '';
        }

        // Close modal when clicking outside
        document.getElementById('cancel-modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCancelModal();
            }
        });

        // Doctor Modal Logic
        document.addEventListener('DOMContentLoaded', () => {
            const openButton = document.getElementById('open-doctor-modal');
            const closeButton = document.getElementById('close-doctor-modal');
            const modal = document.getElementById('add-doctor-modal');
            const toggleCheckbox = document.getElementById('status-toggle');

            if (openButton) {
                openButton.addEventListener('click', () => {
                    modal.classList.remove('hidden');
                });
            }

            if (closeButton) {
                closeButton.addEventListener('click', () => {
                    modal.classList.add('hidden');
                });
            }

            if (modal) {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.add('hidden');
                    }
                });
            }

            // Status Toggle Logic
            if (toggleCheckbox) {
                toggleCheckbox.addEventListener('change', () => {
                    const status = toggleCheckbox.checked;
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/clinic/status';
                    
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'status';
                    input.value = status;
                    form.appendChild(input);
                    
                    const redirectInput = document.createElement('input');
                    redirectInput.type = 'hidden';
                    redirectInput.name = 'redirectTab';
                    redirectInput.value = 'settings';
                    form.appendChild(redirectInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                });
            }
        });
    </script>

    <style>
        .toggle-checkbox:checked {
            right: 0;
            background-color: #10B981;
        }

        .toggle-label {
            background-color: #D1D5DB;
        }

        .toggle-checkbox:checked+.toggle-label {
            background-color: #10B981;
        }
    </style>
</body>

