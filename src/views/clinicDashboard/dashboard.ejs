<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %> â€“ Dashboard | FindaCare</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="/js/tailwind.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen flex bg-page font-sans antialiased">
    <div id="toast-container" class="fixed top-6 right-6 z-[9999] flex flex-col gap-3"></div>
    <%- include('./partials/sidebar') %>
    <div id="sidebar-overlay" class="fixed inset-0 bg-black/40 hidden z-40 md:hidden"></div>

    <main class="flex-1 overflow-x-hidden">
        <div class="p-6 md:p-8">
            <div class="flex items-center justify-between mb-6 md:hidden">
                <button id="open-sidebar-btn" class="p-2.5 rounded-xl bg-white border border-gray-200 shadow-soft text-gray-700">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <span class="text-lg font-semibold text-gray-900"><%= dataClinic.clinicName %></span>
                <div class="w-10"></div>
            </div>

            <header class="mb-8">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Dashboard</h1>
                <p class="text-gray-600 mt-1">Welcome back, <%= dataClinic.clinicName %></p>
            </header>

            <% if (typeof query !== 'undefined' && query.error) { %>
            <div class="mb-6 p-4 bg-red-50 border border-red-100 rounded-xl text-red-800 text-sm">
                <%= decodeURIComponent(query.error) %>
            </div>
            <% } %>

            <% if (typeof query === 'undefined' || !query.tab || query.tab === 'overview') { %>
                <%- include('./partials/overviewTab') %>
            <% } else if (query.tab === 'appointments') { %>
                <%- include('./partials/appointmentsTab') %>
            <% } else if (query.tab === 'clinic-info') { %>
                <%- include('./partials/clinicInfoTab') %>
            <% } else if (query.tab === 'doctors') { %>
                <%- include('./partials/doctorsTab') %>
            <% } else if (query.tab === 'settings') { %>
                <%- include('./partials/settingsTab') %>
            <% } %>
        </div>
    </main>

    <%- include('./partials/modals') %>
    <%- include('./partials/scripts') %>
</body>
</html>
