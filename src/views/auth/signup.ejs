<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up – FindaCare</title>
    <link rel="shortcut icon" href="../images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="../js/tailwind.js"></script>
    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            background: linear-gradient(to bottom, #f8fafc, #e5f7e3);
        }

        main {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
    </style>
</head>

<body class="font-sans antialiased text-gray-900">
    <div id="toast-container" class="fixed top-6 right-6 z-[9999] flex flex-col gap-3"></div>

    <main>
        <div class="w-full max-w-xl bg-white p-8 sm:p-10 rounded-2xl shadow-soft-lg border border-gray-100">
            <div class="text-center mb-8">
                <a href="/" class="inline-flex items-center gap-2 text-accent-green hover:text-emerald-600 transition">
                    <span class="flex h-11 w-11 items-center justify-center rounded-xl bg-accent-green/10">
                        <i class="fa-solid fa-heart-pulse text-xl"></i>
                    </span>
                    <span class="text-2xl font-bold">FindaCare</span>
                </a>
                <h1 class="mt-6 text-2xl font-bold text-gray-900">Create account</h1>
                <p class="mt-2 text-sm text-gray-500">
                    Already have one? <a href="/auth/login" class="font-medium text-accent-green hover:underline">Log
                        in</a>
                </p>
            </div>

            <% if (typeof error !=='undefined' && error) { %>
                <div
                    class="mb-4 p-3 bg-red-50 border border-red-100 rounded-xl flex items-center gap-2 text-sm text-red-800">
                    <i class="fa-solid fa-circle-exclamation text-red-500"></i>
                    <%= error %>
                </div>
                <% } %>

                    <div class="flex p-1 mb-6 bg-gray-100 rounded-xl max-w-md mx-auto">
                        <button id="patient-btn" type="button"
                            class="role-btn flex-1 py-3 text-sm font-semibold rounded-lg transition bg-accent-green text-white shadow-soft">
                            Patient
                        </button>
                        <button id="clinic-btn" type="button"
                            class="role-btn flex-1 py-3 text-sm font-semibold rounded-lg transition text-gray-600 hover:text-gray-900">
                            Clinic
                        </button>
                    </div>

                    <%- include('../particles/userForm') %>
                        <%- include('../particles/clinicForm') %>
        </div>
    </main>

    <footer class="text-center text-xs text-gray-500 py-4 w-full">© <%= new Date().getFullYear() %> FindaCare</footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var patientBtn = document.getElementById('patient-btn');
            var clinicBtn = document.getElementById('clinic-btn');
            var patientForm = document.getElementById('patient-form-container');
            var clinicForm = document.getElementById('clinic-form-container');
            function setPatient() {
                patientBtn.classList.add('bg-accent-green', 'text-white', 'shadow-soft');
                patientBtn.classList.remove('text-gray-600');
                clinicBtn.classList.remove('bg-accent-green', 'text-white', 'shadow-soft');
                clinicBtn.classList.add('text-gray-600');
                patientForm.classList.remove('hidden');
                clinicForm.classList.add('hidden');
            }
            function setClinic() {
                clinicBtn.classList.add('bg-accent-green', 'text-white', 'shadow-soft');
                clinicBtn.classList.remove('text-gray-600');
                patientBtn.classList.remove('bg-accent-green', 'text-white', 'shadow-soft');
                patientBtn.classList.add('text-gray-600');
                clinicForm.classList.remove('hidden');
                patientForm.classList.add('hidden');
            }
            patientBtn.addEventListener('click', setPatient);
            clinicBtn.addEventListener('click', setClinic);
            var initial = '<%= typeof formType !== "undefined" ? formType : "user" %>';
            (initial === 'clinic' ? setClinic : setPatient)();
        });
    </script>
    <script src="../js/script.js"></script>
</body>

</html>