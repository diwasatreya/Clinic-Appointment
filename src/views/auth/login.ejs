<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login – FindaCare</title>

    <link rel="shortcut icon" href="../images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="../js/tailwind.js"></script>
    <link rel="stylesheet" href="../css/style.css">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: linear-gradient(to bottom, #f8fafc, #e5f7e3);
        }
        main {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
        }
        input:focus {
            outline: none;
        }
    </style>
</head>

<body class="font-sans antialiased text-gray-900">

<div id="toast-container" class="fixed top-6 right-6 z-[9999] flex flex-col gap-3"></div>

<main>
    <div class="w-full max-w-md bg-white p-8 sm:p-10 rounded-2xl border border-gray-100 shadow-soft-lg">

        <!-- Logo -->
        <div class="text-center mb-8">
            <a href="/" class="inline-flex items-center gap-3 text-accent-green hover:text-emerald-600 transition">
                <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-accent-green/10">
                    <i class="fa-solid fa-heart-pulse text-xl"></i>
                </span>
                <span class="text-2xl font-bold tracking-tight">FindaCare</span>
            </a>

            <h1 class="mt-6 text-2xl font-bold">Sign in to your account</h1>
            <p class="mt-2 text-sm text-gray-500">
                New here?
                <a href="/auth/signup" class="font-medium text-accent-green hover:underline">
                    Create an account
                </a>
            </p>
        </div>

        <!-- Alerts -->
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-5 flex gap-2 rounded-xl border border-red-200 bg-red-50 p-3 text-sm text-red-800">
            <i class="fa-solid fa-circle-exclamation mt-0.5 text-red-500"></i>
            <span><%= error %></span>
        </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
        <div class="mb-5 flex gap-2 rounded-xl border border-accent-green/20 bg-accent-green-light p-3 text-sm text-emerald-800">
            <i class="fa-solid fa-circle-check mt-0.5 text-accent-green"></i>
            <span><%= success %></span>
        </div>
        <% } %>

        <!-- Form -->
        <form action="/auth/login" method="post" class="space-y-5" id="login-form">

            <!-- Phone -->
            <div>
                <label for="phone" class="block text-sm font-medium mb-1">
                    Phone number
                </label>
                <input
                    id="phone"
                    name="phone"
                    type="tel"
                    required
                    inputmode="numeric"
                    pattern="[0-9]{10}"
                    maxlength="10"
                    placeholder="9812345678"
                    class="w-full rounded-xl border border-gray-200 px-4 py-3 transition
                           focus:border-accent-green focus:ring-2 focus:ring-accent-green/40"
                />
                <p class="mt-1 text-xs text-gray-500">Enter your 10-digit phone number</p>
            </div>

            <!-- Password -->
            <div>
                <label for="password" class="block text-sm font-medium mb-1">
                    Password
                </label>
                <div class="relative">
                    <input
                        id="password"
                        name="password"
                        type="password"
                        required
                        placeholder="••••••••"
                        class="w-full rounded-xl border border-gray-200 px-4 py-3 pr-12 transition
                               focus:border-accent-green focus:ring-2 focus:ring-accent-green/40"
                    />
                    <button
                        type="button"
                        id="toggle-password"
                        aria-label="Show or hide password"
                        class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-400 hover:text-gray-600"
                    >
                        <i class="fa-solid fa-eye" id="password-icon"></i>
                    </button>
                </div>
            </div>

            <!-- Options -->
            <div class="flex items-center justify-between text-sm">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" name="rememberMe"
                        class="h-4 w-4 rounded border-gray-300 text-accent-green focus:ring-accent-green">
                    <span>Remember me</span>
                </label>
                <a href="#" class="font-medium text-accent-green hover:underline">
                    Forgot password?
                </a>
            </div>

            <!-- Submit -->
            <button
                type="submit"
                id="submit-btn"
                class="w-full rounded-xl bg-accent-green py-3 font-semibold text-white
                       transition hover:bg-emerald-600 focus:ring-4 focus:ring-accent-green/30 shadow-soft"
            >
                Sign in
            </button>

        </form>
    </div>
</main>

<footer class="w-full py-4 text-center text-xs text-gray-500">
    © <%= new Date().getFullYear() %> FindaCare - All rights reserved.
</footer>

<script>
    // Password toggle
    const toggle = document.getElementById('toggle-password');
    const password = document.getElementById('password');
    const icon = document.getElementById('password-icon');

    toggle.addEventListener('click', () => {
        const isHidden = password.type === 'password';
        password.type = isHidden ? 'text' : 'password';
        icon.classList.toggle('fa-eye');
        icon.classList.toggle('fa-eye-slash');
    });

    // Prevent double submit
    const form = document.getElementById('login-form');
    const btn = document.getElementById('submit-btn');

    form.addEventListener('submit', () => {
        btn.disabled = true;
        btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin mr-2"></i> Signing in...';
    });
</script>

</body>
</html>
